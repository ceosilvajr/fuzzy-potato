<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.MasterDetailFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true">

        <ImageView
            android:id="@+id/iv_blur_banner"
            android:layout_width="match_parent"
            android:layout_height="280dp"
            android:scaleType="centerCrop"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:alpha="0.8"
            android:background="@android:color/background_dark"
            app:layout_constraintBottom_toBottomOf="@id/iv_blur_banner"
            app:layout_constraintEnd_toEndOf="@id/iv_blur_banner"
            app:layout_constraintStart_toStartOf="@id/iv_blur_banner"
            app:layout_constraintTop_toTopOf="@id/iv_blur_banner" />

        <ImageView
            android:id="@+id/iv_banner"
            android:layout_width="120dp"
            android:layout_height="150dp"
            android:src="@drawable/img_movie_placeholder"
            app:layout_constraintBottom_toBottomOf="@id/iv_blur_banner"
            app:layout_constraintEnd_toEndOf="@id/iv_blur_banner"
            app:layout_constraintStart_toStartOf="@id/iv_blur_banner"
            app:layout_constraintTop_toTopOf="@id/iv_blur_banner" />


        <TextView
            android:id="@+id/tv_genre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:textAppearance="?android:textAppearanceMedium"
            app:layout_constraintTop_toBottomOf="@id/iv_blur_banner"
            tools:text="Concert Film" />

        <TextView
            android:id="@+id/tv_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:textAppearance="?android:textAppearanceSmall"
            app:layout_constraintTop_toBottomOf="@id/tv_genre"
            tools:text="Start Wars Movie, Start Wars Movie, Start Wars Movie" />

        <TextView
            android:id="@+id/tv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/divider"
            tools:text="$ 10.00" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="2"
            android:textAppearance="?android:textAppearanceLarge"
            android:textColor="@android:color/background_light"
            app:layout_constraintBottom_toBottomOf="@id/iv_blur_banner"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/iv_banner"
            tools:text="Start Wars Movie" />

        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_margin="10dp"
            android:background="@android:color/darker_gray"
            app:layout_constraintTop_toBottomOf="@id/tv_description" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>